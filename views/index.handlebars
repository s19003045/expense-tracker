<div class="row mb-5">
  <div class="col-12 col-lg-8 mx-auto bg-light">
    <div class="row px-5 d-flex py-3 bg-light">

      {{!-- 搜尋及新增列 --}}
      {{!-- 左：類別 ；中：date picker ；右：新增(+)icon --}}
      <form action="/records" method="GET" class="form-inline">
        <div class="form-group mb-2">
          {{!-- dropdown: category --}}
          <div class="dropdown mr-5">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              類別
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" name="category" href="#" value="家居物業">
                <i class="fas fa-home mr-2"></i>家居物業
              </a>
              <a class="dropdown-item" name="category" href="#" value="交通出行">
                <i class="fas fa-shuttle-van mr-2"></i>交通出行
              </a>
              <a class="dropdown-item" name="category" href="#" value="休閒娛樂">
                <i class="fas fa-grin-beam mr-2"></i>休閒娛樂
              </a>
              <a class="dropdown-item" name="category" href="#" value="餐飲食品">
                <i class="fas fa-utensils mr-2"></i>餐飲食品
              </a>
              <a class="dropdown-item" name="category" href="#" value="其他">
                <i class="fas fa-pen mr-2"></i>其他
              </a>
            </div>
          </div>
        </div>


        {{!-- date picker --}}
        <div class="form-group mb-2 mr-2">
          <label for="day-selected" class="col-form-label mr-2">Select date:</label>
          <input type="date" class="form-control" id="day-selected" name="day-selected" value="">
        </div>

        <button class="btn btn-outline-primary mb-2 mr-2" type="sumbit">Search</button>

        <div class="form-group ml-5 align-middle">
          <a class="btn rounded" href="/records/new">
            <i class="fas fa-plus-circle fa-3x"></i>
          </a>
        </div>
    </div>
    </form>

    <div class="total-amount bg-warning py-2 mr-0 border">
      <div class="input-group justify-content-center">
        <label for="total-amount" class="mr-5">
          <h1>TWD</h1>
        </label>
        <h1 id="total-amount">${{totalAmount}}</h1>
      </div>
    </div>
    <div class="row">

      {{!-- 列出該日所有的record --}}
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Category</th>
            <th scope="col">Name and Date</th>
            <th scope="col">Total amount</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each records}}
          <tr>
            <td class="align-middle pl-4">

              {{#ifEquals '家居物業' this.category}}
              <i class="fas fa-home fa-2x"></i>
              {{/ifEquals}}
              {{#ifEquals '交通出行' this.category}}
              <i class="fas fa-shuttle-van fa-2x"></i>
              {{/ifEquals}}
              {{#ifEquals '休閒娛樂' this.category}}
              <i class="fas fa-grin-beam fa-2x"></i>
              {{/ifEquals}}
              {{#ifEquals '餐飲食品' this.category}}
              <i class="fas fa-utensils fa-2x"></i>
              {{/ifEquals}}
              {{#ifEquals '其他' this.category}}
              <i class="fas fa-pen fa-2x"></i>
              {{/ifEquals}}

            </td>
            <td class="align-middle">{{this.name}}<br>
              <small id="" class="text-muted">{{this.date}}</small>
              <br>
              <small id="" class="text-muted">{{this.merchant}}</small>
            </td>
            <td class="align-middle">${{this.itemTotalPrice}}</td>
            <td>
              <form action="/records/{{this._id}}/delete?_method=DELETE" method="POST">
                <a class="btn btn-info my-1" href="/records/{{this._id}}/edit">修改</a>
                <button class="btn btn-secondary my-1" type="submit"
                  onclick="return confirm('Are you sure you want to delete this item?');">刪除</button>
              </form>
            </td>
          </tr>
          {{/each}}


